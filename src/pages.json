{
	"easycom": {
		"autoscan": true,
		"custom": {
			"^uv-(.*)": "@climblee/uv-ui/components/uv-$1/uv-$1.vue"
		}
	},
	"tabBar": {
		"selectedColor": "#07B4F0",
		"borderStyle": "white",
		"list": [{
			"pagePath": "pages/home/index",
			"iconPath": "static/image/icon_tab_home_inactive.png",
			"selectedIconPath": "static/image/icon_tab_home_active.png",
			"text": "首页"
		}, {
			"pagePath": "pages/user/index",
			"iconPath": "static/image/icon_tab_user_inactive.png",
			"selectedIconPath": "static/image/icon_tab_user_active.png",
			"text": "个人中心"
		}]
	},
	"pages": [
		{
			"path": "pages/home/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/user/index",
			"style": {
				"navigationBarTitleText": "个人中心"
			}
		},
		{
			"path": "pages/index/index"
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#FFFFFF",
		"backgroundColor": "#F8F8F8",
		"backgroundColorTop":"#F8F8F8"
	}
}
